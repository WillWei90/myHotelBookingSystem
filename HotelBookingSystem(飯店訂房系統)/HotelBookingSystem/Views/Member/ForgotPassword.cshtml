@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "忘記密碼";
}

@section styles {
    <style>
        .login-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            text-align: center;
        }

        .login-container h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        .login-container .form-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            justify-content: center;
        }

        .login-container label {
            width: 80px;
            text-align: right;
            margin-right: 10px;
        }

        .login-container .input-box {
            flex: 1;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .login-container .btn-submit {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 120px;
            margin: 0 auto;
        }

        .login-container .btn-submit:hover {
            background-color: #0056b3;
        }

        .text-danger {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }

        .text-success {
            color: green;
            font-size: 14px;
            margin-top: 5px;
        }

        .validation-message {
            display: block;
            margin-top: 5px;
            font-size: 14px;
        }

        .back-to-login {
            margin-top: 15px;
            font-size: 14px;
        }

        .back-to-login a {
            color: #007bff;
            text-decoration: none;
        }

        .back-to-login a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="login-container">
    <h2>忘記密碼</h2>

    @using (Html.BeginForm("ForgotPassword", "Member", FormMethod.Post))
    {
        <div class="form-group">
            <label for="Email">電子信箱：</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "input-box", placeholder = "請輸入註冊信箱" })
        </div>

        <div class="validation-message">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="@(ViewData["IsError"] != null && (bool)ViewData["IsError"] ? "text-danger" : "text-success")">
                @ViewData["Message"]
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn-submit">確認送出</button>
        </div>
    }

    <div class="back-to-login">
        @Html.ActionLink("返回登入", "SignIn")
    </div>
</div>