@model HotelBookingSystem.Models.ErrorViewModel

@{
    ViewData["Title"] = "發生錯誤";
}

<div class="container mt-5">
    <h1 class="text-danger text-center">發生錯誤</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <h3 class="text-center">@Model.Message</h3>
    }
    else
    {
        <h3 class="text-center">請求無法完成，發生未知錯誤。</h3>
    }

    @if (!string.IsNullOrEmpty(Model.Details))
    {
        <p class="text-center text-muted"><strong>詳細訊息：</strong> @Model.Details</p>
    }

    @if (Model.ShowRequestId)
    {
        <p class="text-center text-muted"><strong>請求 ID：</strong> @Model.RequestId</p>
    }

    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-primary">返回上一頁</a>
    </div>
</div>
